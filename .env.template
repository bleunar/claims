# =====================================================
# CLAIMS APPLICATION - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and update with your actual values

# ===== GENERAL CONFIGURATION =====
FLASK_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# ===== SECURITY & SECRETS =====
# IMPORTANT: Change these to strong random values in production
SECRET_KEY=change_this_to_a_random_secret_key
JWT_SECRET_KEY=change_this_to_another_random_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600

# ===== ADMIN INITIALIZATION =====
# Initial password for default admin account (only used on first startup)
ADMIN_INIT_PASSWORD=CHANGE_THIS

# ===== DATABASE CONFIGURATION =====
# External Database Connection Details
# The backend will connect to this host. Ensure it is accessible from the container.
MYSQL_HOST=your-external-db-host.com
MYSQL_PORT=3306
MYSQL_DB=claims
MYSQL_USER=claims_user
MYSQL_PASSWORD=your_secure_password



# ===== CORS CONFIGURATION =====
# Add all frontend URLs that need to access the backend
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,https://your-production-domain.com

# ===== EMAIL CONFIGURATION =====
# Gmail SMTP settings (use App Password, not your regular password)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ===== FILE UPLOAD CONFIGURATION =====
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,csv,xlsx

# ===== RATE LIMITING =====
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=200 per day;50 per hour

# ===== LOGGING =====
LOG_FILE=logs/claims.log

# ===== FRONTEND CONFIGURATION =====
# Backend API URL for frontend
VITE_API_URL=http://localhost:5000
VITE_ENV=development
VITE_ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,https://claims.occulant.com
